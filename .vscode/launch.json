{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MaterialXView",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "--path", "${workspaceFolder}",
                //"--material", "${workspaceFolder}/resources/Materials/Examples/metallic_fresnel_test.mtlx",
                "--material", "${workspaceFolder}/resources/Materials/Examples/GltfPbr/gltf_pbr_default.mtlx",
                "--envRad", "${workspaceFolder}/resources/Lights/neutral.hdr",
                "--drawEnvironment", "true"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false
        }
    ]
}